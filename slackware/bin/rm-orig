#!/bin/bash
##################################################################
# Borra todos los archivos .orig que deja slackpkg
# Escrito por Michael Pratt (pratt@hablarmierda.net)
# http://www.michael-pratt.com
#
# Este script se publica bajo la licencia Creative Commons
# Attribution NonCommercial ShareAlike
# http://creativecommons.org/licenses/by-nc-sa/3.0/deed.es_CO
##################################################################
#set -e
shopt -s checkwinsize
[ "$#" -ne "1" ] && echo "Usage: rm-orig [-d|--delete] [-l|--list]" && exit 0

case "$1" in
	-d|--delete) 
        find / -path /mnt/windows -prune -o -type f -name '*.orig' -exec rm {} \; 
        find / -path /mnt/windows -prune -o -type f -name '*~' -exec rm {} \; 
        ;;
	-l|--list) 
        find / -path /mnt/windows -prune -o -type f -name '*.orig' -print 
        find / -path /mnt/windows -prune -o -type f -name '*~' -print 
        ;;
	*) echo "Usage: rm-orig [-d|--delete] [-l|--list]" ;;
esac

#!/bin/sh
#
# /etc/rc.d/rc.local_shutdown:  Local commands run on shutdown
# Michael Pratt
#
#
if [ -x /etc/rc.d/rc.vboxdrv ]; then
    echo -e "Shutting down virtualbox kernel module"
    /etc/rc.d/rc.vboxdrv stop
fi

# Empty out the temp Directories
rm -rf /tmp/*
rm -rf /var/log/removed_packages/*
rm -rf /var/log/removed_scripts/*
rm -rf /var/log/sbopkg/*
rm -rf /var/cache/sbopkg/*

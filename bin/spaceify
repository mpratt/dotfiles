# set -e
FILE=()
EXT=()
DEPTH=1

# Show how to use this script
function usage() {
    echo "Converts tabs into spaces in a file or an extension"
    echo "Usage: $(basename ${0}) [-f|--file file] [-e|--extension extension] [-d|--depth 1] [-h|--help]"
    exit 0
}

# get options
while [ -n "${1}" ]; do
    case "${1}" in
        -h|--help) usage ;;
        -f|--file*) shift; FILE+=( "${1}" ) ;;
        -e|--extension*) shift; EXT+=( "-iname *.${1} " ) ;;
        -d|--depth*) shift; DEPTH="${1}" ;;
        *) usage ;;
  esac
  shift
done

if [ "${#FILE}" -gt 0 ]; then
    for i in ${FILE[@]}; do
        if [ -f "${i}" ]; then
            echo "converting ${i}"
            sed -i 's/\t/    /g' ${i};
        fi
    done
elif [ "${#EXT}" -gt 0 ]; then
    found=$(find $(pwd) -type f -maxdepth ${DEPTH} ${EXT[@]} -print)
    if [ -n "${found}" ]; then
        echo "Found: ${found}"
        find $(pwd) -type f -maxdepth ${DEPTH} ${EXT[@]} -exec sed -i 's/\t/    /g' {} \;
    fi
else
    usage
fi

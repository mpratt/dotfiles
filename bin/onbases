set -e

if [ "${#}" -eq "0" ]; then
    echo "Missing Data"
    echo "Usage: $(basename $0) [string|number]"
    exit 0
fi

echo "Hexadecimal to Decimal:"
printf "%d\n" 0x${1};

echo "Decimal to Hexadecimal"
printf "%X\n" ${1}; 

echo "Binary to Decimal"
echo "ibase=2; obase=A; $*" | bc;

echo "Decimal to Binary"
echo "obase=2; $*" | bc; 

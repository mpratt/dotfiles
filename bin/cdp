APPNAME="CD to Project"
VERSION="1.0"
WD="${HOME}/Projects"

##################################################################
# Run script
##################################################################
if [ "${#}" -lt 1 ]; then
    echo "${APPNAME}"
    echo "Usage: $(basename ${0}) [project-name]"
    return 0
fi

if ! [ -e "${WD}" ]; then
    echo "Directory ${WD} doesnt exist"
    return 1
fi

if ! [ -e "${WD}/${1}" ]; then
    echo "Could not find selector ${1}"
    return 1
fi

if [ -e "${WD}/${1}" ]; then
    echo "Going to: ${WD}/${1}"
    cd "${WD}/${1}/"
    
    if [ -n "${2}" ]; then
        SUBDIR="$(find -maxdepth 3  -type d -iname "${2}*" -print | head -n 1)" 
        if [ -n "${SUBDIR}" ]; then
            echo "Going to: ${SUBDIR}"
            cd "${SUBDIR}"
        fi
    fi

    ls -la --color=auto
else
    echo "Could not find project in ${WD}/${1}"
    return 1
fi

# set -e
HOSTFILE="/etc/hosts"
SITES=("reddit.com"\
       "facebook.com"\
       "twitter.com"\
       "vimeo.com"\
       "flickr.com"\
       "youtube.com"\
       "news.ycombinator.com"\
       "hablarmierda.net"\
       "digg.com"\
       "eltiempo.com"\
       "lafiscalia.com"\
       "imgur.com"\
       "elespectador.com"\
       "stumpleupon.com"\
       "goear.com")

#################################################################
# Usage
#################################################################
be_efficient_usage()
{
    echo "usage $(basename ${0}) [--enable|--disable] [--add website] [--remove website] [--list]"
    exit 0
}

#################################################################
# Enables the script with the default values
#################################################################
be_efficient_enable()
{
    local i
    for i in ${SITES[@]}; do
        be_efficient_add "${i}"
    done

    echo "Work mode enabled"
}

#################################################################
# Cleans the host file from urls registered by this script
#################################################################
be_efficient_clean()
{
    sed -i -e '/#beefficient$/d' ${HOSTFILE}
    echo "Work mode disabled"
}

#################################################################
# Adds a new website to the host-file
#################################################################
be_efficient_add()
{
    local website="${1}"
    echo -e "127.0.0.1\t$website\t#beefficient" >> ${HOSTFILE}
    echo -e "127.0.0.1\twww.$website\t#beefficient" >> ${HOSTFILE}
    echo "Added ${website}"
}

#################################################################
# Removes registered urls from the host-file
#################################################################
be_efficient_remove()
{
    local website="${1}"
    sed -i "/${website}/d" ${HOSTFILE}
    sed -i "/www.${website}/d" ${HOSTFILE}
    echo "Removed ${website}"
}

#################################################################
# Shows all registered websites
#################################################################
be_efficient_list()
{
    grep '#be' ${HOSTFILE} | awk '{print $2}'
}

#################################################################
# Just start
#################################################################
if [ "$#" -eq "0" ]; then
    be_efficient_usage
    exit 0
fi

if [ ! -w "${HOSTFILE}" ]; then
    echo "cannot write to ${HOSTFILE} (are you root?)"
    exit 1
fi

while [ -n "${1}" ]; do
    case ${1} in
        --enable)
            be_efficient_clean
            be_efficient_enable ;;

        --add)
            shift
            be_efficient_add "${1}" ;;

        --remove)
            shift
            be_efficient_remove "${1}" ;;

        --disable)
            be_efficient_clean ;;

        --list)
            be_efficient_list ;;

        *) be_efficient_usage ;;
    esac
    shift
done

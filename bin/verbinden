set -e

APPNAME="Verbinden"
VERSION="1.0"
WD="${HOME}/Projects"

##################################################################
# Run script
##################################################################
if [ "${#}" -lt 1 ]; then
    echo "Usage: $(basename ${0})  "
    echo "Usage: $(basename ${0}) [project-dir] show "
    exit 0
fi

if ! [ -e "${WD}" ]; then
    echo "Directory ${WD} doesnt exist"
    exit 1
fi

if ! [ -e "${WD}/${1}" ]; then
    echo "Could not find selector ${1}"
    exit 1
fi

if [ -e "${WD}/${1}/verbinden" ]; then
    FILE="${WD}/${1}/verbinden"
elif [ -e "${WD}/${1}/connect" ]; then
    FILE="${WD}/${1}/connect"
else
    echo "Could not find command in ${WD}/${1}"
    exit 1
fi

shift

if [[ "${1}" == "show" ]]; then
    cat ${FILE}
else
    bash ${FILE} ${@}
fi



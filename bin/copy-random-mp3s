LISTS=()
CWD="${PWD}"
OUTPUTDIR=""
TOTAL_FILES="0"

usage() {
    echo "Usage ${0} playlist1.m3u playlist2.m3u --total [number of mp3s] --output-dir [dir]"
}

if [ "${#}" -eq 0 ]; then
    usage
    exit
fi

while [ -n "$1" ]; do
    case ${1} in
        --total) shift; TOTAL_FILES="${1}"; shift ;;
        --output-dir) shift; OUTPUTDIR="${1}"; shift ;;
        *) 
            if [ -f "${1}" ]; then
                LISTS+=( "${1}" )
            fi

            shift ;;
    esac
done

if [ "${TOTAL_FILES}" -eq 0 ]; then
    echo "ERROR: You need to specify a number of songs"
    usage
    exit 1
fi

cat ${LISTS[@]} | egrep -v '^#|^$' > _tmp_list.m3u
FILES=$(cat _tmp_list.m3u | egrep -v '^#|^$' | uniq | sort -R | sort -R | uniq | head -n ${TOTAL_FILES})
if [ -n "${FILES}" ]; then
    if [ -z "${OUTPUTDIR}" ]; then
        OUTPUTDIR="${CWD}/random-mp3s"
    fi

    mkdir -p "${OUTPUTDIR}/"
else
    echo "Empty result set"
    exit 1
fi

rm -rf _tmp_list.m3u
IFS=$(echo -en "\n\b")
for f in ${FILES}; do
    echo "Copying: ${f}"
   if [ -f "${f}" ]; then
       cp "${f}" "${OUTPUTDIR}/$(basename ${f})"
    else
        echo "Could not copy ${f}"
   fi
done

echo "Done"

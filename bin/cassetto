# set -e
shopt -s checkwinsize
APPNAME="Cassetto (Un cassette virtual)"
VERSION="1.2"
CWD=$(pwd)
STAMP=$(date +%H%M%S)
TMPDIR=${TMPDIR:-$(mktemp -d -t cassetto.XXXXXX)}
DIALOG=${DIALOG:-dialog}

# Its a Trap!
trap "cassetto_exit" 0 1 2 5 15
#################################################################
# Funcion encargada de limpiar lo que no sirve!
#################################################################
cassetto_exit()
{
	echo "Cerrando aplicaciones"
	if [ -e "touch ${TMPDIR}/rtmpdump" ]; then
		killall rtmpdump
	elif [ -e "touch ${TMPDIR}/mplayer" ]; then
		killall mplayer
	fi

	echo "Limpiando Archivos temporales"
	rm -rf ${TMPDIR}
}

#################################################################
# Funcion encargada de verificar dependencias
#################################################################
cassetto_requires()
{
	local app
	for app in ${@}; do
		echo "Verificando ${app}....."
		if ! [ "$(which $app 2> /dev/null)" ]; then
			echo "*** Error Fatal! Para correr este script se requiere la instalacion de ${app}"
			exit 1
		fi
	done
}

#################################################################
# Funcion encargada de descargar de playlists normales
#################################################################
cassetto_mp3()
{
	cassetto_requires mplayer

	local url=${1}
	local name=${2}

	echo "*** Para escuchar lo que estas descargando debes ir a ${CWD}/${name}-${STAMP}.mp3"
	echo "Oprimir Control + C para terminar la accion"

	touch ${TMPDIR}/mplayer
	mplayer "${url}" -user-agent "NSPlayer/9.0.0.3250 WMFSDK/9.0" -cache 1024 -prefer-ipv4 -dumpstream -dumpfile "${CWD}/${name}-${STAMP}.mp3" -slave -quiet
}

##################################################################
# Descarga el audio usando rtmp
##################################################################
cassetto_rtmp()
{
	cassetto_requires rtmpdump

	local url=${1}
	local name=${2}
	local minutes=${3}
	local time=0
	let time=${3}*60

	echo "*** Para escuchar lo que estas descargando debes ir a ${CWD}/${name}-${STAMP}.mp4"
	echo "*** Ojo! Este script solo va a grabar durante ${minutes} minutos! Despues tendras que volver a ejecutarlo"
	echo "Oprimir Control + C para terminar la accion. "

	touch ${TMPDIR}/rtmpdump
	# -y $(basename ${url})
	rtmpdump -r "${url}" -B ${time} -o "${CWD}/${name}-${STAMP}.mp4"
}

##################################################################
# Descarga audio de las emisoras de escuchemos.com
##################################################################
cassetto_letio()
{
	local url=$(curl -s http://master.letio.com/getMD.aspx?gs=${1} | grep urlMusic | sed 's/urlMusicPart=//g' | tr -d [:blank:])
	echo "${url}"
	cassetto_rtmp "${url}" "${2}" "120"
}

#################################################################
# Funcion principal
#################################################################
cassetto_main()
{
	cd ${TMPDIR}
	${DIALOG} --clear --title "$APPNAME $VERSION" \
			  --backtitle "$APPNAME $VERSION" \
			  --menu "Escoge el audio que quieres descargar/escuchar:" 25 120 15 \
			  "1"  "Radioacktiva" \
			  "2"  "Radionica" \
			  "3"  "La W Radio" \
			  "4"  "La Mega" \
			  "5"  "Rumba Estereo" \
			  "6"  "RCN Basica" \
			  "7"  "RCN La Radio" \
			  "8"  "La FM" \
			  "9"  "Amor Estereo" \
			  "10" "Das Ding Live" \
			  "11" "Lautstark (Dienstags)" \
			  "12" "Sprechstunde" \
			  "13" "Plattenleger" \
			  "14" "Candela Estereo" \
			  "15" "Vibra Estereo Bogota" \
			  "16" "Melodia Estereo" 2> ${TMPDIR}/tmp_menu_main

	[ "$?" -ne "0" ] && exit 0

	clear
	touch ${TMPDIR}/lock
	case "$(cat ${TMPDIR}/tmp_menu_main)" in
		1)	# Radioacktiva
			cassetto_mp3 "mms://66.165.172.170/coractiva" "Radioacktiva";;

		2)	# Radionica
			cassetto_rtmp "rtmp://streaming01.codistream.net:1935/rtvcRadionicalive" "Radionica" "120";;

		3)	# La W Radio
			cassetto_mp3 "http://66.175.96.10/cowradio" "LaW";;

		4)	# La Mega
			cassetto_mp3 "http://virtualcolombia.net/cast/tunein.php/lamegarcn/playlist.pls" "LaMega";;

		5)	# Rumba Estereo
			cassetto_mp3 "http://virtualcolombia.net/cast/tunein.php/rumbast/playlist.pls" "Rumba";;

		6)	# RCN Basica
			cassetto_mp3 "http://virtualcolombia.net/cast/tunein.php/rcnradio1/playlist.pls" "Basica";;

		7)	# RCN La Radio
			cassetto_mp3 "http://virtualcolombia.net/cast/tunein.php/radiounorcn/playlist.pls" "RCNRadio";;

		8)	# La FM
			cassetto_mp3 "http://virtualcolombia.net/cast/tunein.php/lafmradio/playlist.pls" "LaFM";;

		9)	# Amor Estereo
			cassetto_mp3 "http://virtualcolombia.net/cast/tunein.php/amorstrcn/playlist.pls" "AmorSt";;

		10)	# Das Ding Live
			cassetto_mp3 "http://mp3-live.dasding.de/dasding_m.m3u" "DasDingLive";;

		11)	# Das Ding Lautstark
			cassetto_mp3 "http://mp3-live.dasding.de/dasdingraka01_m.m3u" "DasDingLautstark";;

		12)	# Das Ding Sprechstunde
			cassetto_mp3 "http://mp3-live.dasding.de/dasdingraka02_m.m3u" "DasDingSprechstunde";;

		13)	# Das Ding Plattenleger
			cassetto_mp3 "http://mp3-live.dasding.de/dasdingraka03_m.m3u" "DasDingPlattenleger";;

		14)	# Candela Estereo
			cassetto_letio "5036" "CandelaSt";;

		15)	# Vibra Estereo Bogota
			cassetto_letio "5034" "VibraSt";;

		16)	# Melodia Estereo
			cassetto_letio "7000" "MelodiaSt";;
	esac
}

#################################################################
# Empieza ya!
#################################################################
cassetto_main
exit 0

#!/bin/bash
##################################################################
#  A sync local doftiles with the ones on my external drive
#  Michael Pratt <pratt@hablarmierda.net>
##################################################################
MOUNTPOINT="/mnt/storage"
if mountpoint -q "${MOUNTPOINT}"; then 
    ISMOUNTPOINT=1
else
    ISMOUNTPOINT=0
fi

if [[ "${ISMOUNTPOINT}" == "0" ]]; then
    echo "Error: ${MOUNTPOINT} is not a mountpoint! Please connect your harddrive"
    exit 1
elif [ ! -e "${MOUNTPOINT}/setup-dotfiles" ]; then
    echo "Error: ${MOUNTPOINT}/setup-dotfiles doesnt exists"
    exit 1
else
    bash ${MOUNTPOINT}/setup-dotfiles
fi


